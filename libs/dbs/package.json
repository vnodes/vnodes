{
    "name": "@vnodes/dbs",
    "description": "- [ ] add description",
    "homepage": "https://vnodes.github.io/vnodes/libs/dbs",
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "author": {
        "email": "robert.brightline+vnodes-dbs@gmail.com",
        "name": "Robert Brightline",
        "url": "https://vnodes.github.io/vnodes/libs/dbs"
    },
    "keywords": [],
    "icon": "https://vnodes.github.io/vnodes/libs/dbs/assets/favicon.png",
    "funding": [
        {
            "type": "cashapp",
            "url": "https://cash.app/$puqlib"
        }
    ],
    "version": "0.0.1",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "@vnodes/source": "./src/index.ts",
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./ctc": {
            "types": "./dist/ctc//index.d.ts",
            "import": "./dist/ctc//index.js",
            "default": "./dist/ctc//index.js"
        },
        "./hr": {
            "types": "./dist/hr//index.d.ts",
            "import": "./dist/hr//index.js",
            "default": "./dist/hr//index.js"
        },
        "./ims": {
            "types": "./dist/ims//index.d.ts",
            "import": "./dist/ims//index.js",
            "default": "./dist/ims//index.js"
        },
        "./pms": {
            "types": "./dist/pms//index.d.ts",
            "import": "./dist/pms//index.js",
            "default": "./dist/pms//index.js"
        }
    },
    "files": [
        "assets",
        "dist",
        "!**/*.tsbuildinfo"
    ],
    "nx": {
        "sourceRoot": "libs/dbs/src",
        "targets": {
            "build": {
                "executor": "@nx/js:swc",
                "outputs": [
                    "{options.outputPath}"
                ],
                "options": {
                    "outputPath": "libs/dbs/dist",
                    "main": "libs/dbs/src/index.ts",
                    "tsConfig": "libs/dbs/tsconfig.lib.json",
                    "skipTypeCheck": false,
                    "stripLeadingPaths": true
                }
            },
            "lint": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "npx @biomejs/biome check --write --unsafe {projectRoot}"
                }
            },
            "test": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "npx tsx --tsconfig tsconfig.lib.json --test src/**/*.{spec,test}.ts",
                    "cwd": "{projectRoot}"
                }
            },
            "doc": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "npx typedoc --tsconfig libs/dbs/tsconfig.lib.json --entryPoints libs/dbs/src/index.ts --out public/libs/dbs",
                    "cwd": "{workspaceRoot}"
                }
            }
        }
    },
    "dependencies": {
        "@swc/helpers": "~0.5.11"
    },
    "devDependencies": {
        "dotenv": "^17.3.1",
        "prisma": "7.3.0"
    }
}