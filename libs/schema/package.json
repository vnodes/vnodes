{
    "name": "@vnodes/schema",
    "description": "Schemas to design single source of truth",
    "homepage": "https://vnodes.github.io/vnodes/libs/schema",
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "author": {
        "email": "robert.brightline+vnodes-schema@gmail.com",
        "name": "Robert Brightline",
        "url": "https://vnodes.github.io/vnodes/libs/schema"
    },
    "keywords": [],
    "icon": "https://vnodes.github.io/vnodes/libs/schema/assets/favicon.png",
    "funding": [
        {
            "type": "cashapp",
            "url": "https://cash.app/$puqlib"
        }
    ],
    "version": "0.0.1",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "@vnodes/source": "./src/index.ts",
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "assets",
        "schema",
        "dist",
        "!**/*.tsbuildinfo"
    ],
    "nx": {
        "sourceRoot": "libs/schema/src",
        "targets": {
            "build": {
                "executor": "@nx/js:swc",
                "outputs": [
                    "{options.outputPath}"
                ],
                "options": {
                    "outputPath": "libs/schema/dist",
                    "main": "libs/schema/src/index.ts",
                    "tsConfig": "libs/schema/tsconfig.lib.json",
                    "skipTypeCheck": false,
                    "stripLeadingPaths": true
                },
                "dependsOn": [
                    "generate-types"
                ]
            },
            "generate-types": {
                "executor": "nx:run-commands",
                "options": {
                    "commands": [
                        "npx json-schema-to-typescript ./project-model.json --inferStringEnumKeysFromValues=true --additionalProperties=false > ./../src/lib/schema.ts"
                    ],
                    "cwd": "{projectRoot}/schema"
                }
            },
            "lint": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "npx @biomejs/biome check --write --unsafe {projectRoot}"
                }
            },
            "test": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "npx tsx --tsconfig tsconfig.lib.json --test src/**/*.{spec,test}.ts",
                    "cwd": "{projectRoot}"
                }
            },
            "doc": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "npx typedoc --tsconfig libs/schema/tsconfig.lib.json --entryPoints libs/schema/src/index.ts --out public/libs/schema",
                    "cwd": "{workspaceRoot}"
                }
            }
        }
    },
    "dependencies": {
        "@swc/helpers": "~0.5.11"
    },
    "devDependencies": {
        "json-schema-to-typescript": "^15.0.4"
    }
}