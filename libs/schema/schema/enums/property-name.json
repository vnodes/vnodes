{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Property Names",
    "$id": "propertyName",
    "description": "A list of property names",
    "anyOf": [
        {
            "description": "Id properties",
            "enum": [
                "id",
                "uuid"
            ]
        },
        {
            "description": "timestamp properties",
            "enum": [
                "createdAt",
                "updatedAt",
                "deletedAt",
                "startedAt",
                "endedAt",
                "expiresAt",
                "expiredAt",
                "due"
            ]
        },
        {
            "description": "User profile properties",
            "enum": [
                "name",
                "description",
                "fullName",
                "firstName",
                "lastName",
                "middleName",
                "gender",
                "dob",
                "age"
            ]
        },
        {
            "description": "user confidential information",
            "enum": [
                "ssn"
            ]
        },
        {
            "description": "Contact properties",
            "enum": [
                "type",
                "unit",
                "street",
                "city",
                "state",
                "country",
                "province",
                "zip",
                "phone",
                "email",
                "website",
                "url",
                "emails",
                "contact",
                "contacts",
                "phones",
                "address",
                "addresses"
            ]
        },
        {
            "description": "Auth properties",
            "enum": [
                "username",
                "password",
                "accessToken",
                "otp",
                "token"
            ]
        },
        {
            "description": "Relative user properties",
            "enum": [
                "user",
                "manager",
                "employee",
                "customer",
                "owner",
                "assignee"
            ]
        },
        {
            "description": "Relative audit user properties",
            "enum": [
                "createdBy",
                "updatedBy",
                "deletedBy",
                "lastAccessedBy"
            ]
        },
        {
            "description": "Status properties",
            "enum": [
                "status",
                "active",
                "passive"
            ]
        },
        {
            "description": "Group properties",
            "enum": [
                "tag",
                "tags",
                "category",
                "categories",
                "department",
                "departments"
            ]
        },
        {
            "description": "Foreign keys",
            "enum": [
                "contactId",
                "userId",
                "categoryId",
                "productId"
            ]
        }
    ]
}