{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Property Names",
    "$id": "propertyName",
    "description": "A list of property names",
    "anyOf": [
        {
            "description": "Id properties",
            "enum": [
                "id",
                "uuid"
            ]
        },
        {
            "description": "timestamp properties",
            "enum": [
                "createdAt",
                "updatedAt",
                "deletedAt",
                "startedAt",
                "endedAt",
                "expiresAt",
                "expiredAt",
                "due"
            ]
        },
        {
            "description": "Name properties",
            "enum": [
                "name",
                "description",
                "firstName",
                "lastName",
                "middleName"
            ]
        },
        {
            "description": "Contact properties",
            "enum": [
                "street",
                "city",
                "state",
                "country",
                "province",
                "zip",
                "phone",
                "email",
                "website",
                "url"
            ]
        },
        {
            "description": "Auth properties",
            "enum": [
                "username",
                "password",
                "accessToken",
                "otp",
                "token"
            ]
        },
        {
            "description": "Relative user properties",
            "enum": [
                "user",
                "manager",
                "employee",
                "customer",
                "owner",
                "assignee"
            ]
        },
        {
            "description": "Relative audit user properties",
            "enum": [
                "createdBy",
                "updatedBy",
                "deletedBy",
                "lastAccessedBy"
            ]
        },
        {
            "description": "Status properties",
            "enum": [
                "status",
                "active",
                "passive"
            ]
        },
        {
            "description": "Group properties",
            "enum": [
                "tag",
                "tags",
                "category",
                "categories",
                "department",
                "departments"
            ]
        }
    ]
}