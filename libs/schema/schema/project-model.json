{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "project options",
    "properties": {
        "name": {
            "type": "string"
        },
        "env": {
            "patternProperties": {
                "^[A-Z]{1,}$": {
                    "type": "string"
                }
            }
        },
        "models": {
            "anyOf": [
                {
                    "type": "array",
                    "items": {
                        "$ref": "./enums/model-name.json"
                    },
                    "uniqueItems": true
                },
                {
                    "$ref": "./model.json"
                }
            ]
        }
    },
    "required": [
        "name"
    ]
}