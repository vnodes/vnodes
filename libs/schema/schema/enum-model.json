{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "enum model options",
    "description": "Scheam to design enum models",
    "anyOf": [
        {
            "$ref": "./enums/enum-name.json"
        },
        {
            "properties": {
                "name": {
                    "$ref": "./enums/enum-name.json"
                },
                "values": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[A-Z]{1}[a-zA-Z]{0,}$"
                    },
                    "minItems": 2
                }
            },
            "required": [
                "name",
                "values"
            ]
        }
    ]
}