{
    "name": "@vnodes/nest",
    "description": "Nestjs common",
    "homepage": "https://vnodes.github.io/vnodes/libs/nest",
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "author": {
        "email": "robert.brightline+vnodes-nest@gmail.com",
        "name": "Robert Brightline",
        "url": "https://vnodes.github.io/vnodes/libs/nest"
    },
    "keywords": [],
    "icon": "https://vnodes.github.io/vnodes/libs/nest/assets/favicon.png",
    "funding": [
        {
            "type": "cashapp",
            "url": "https://cash.app/$puqlib"
        }
    ],
    "version": "0.0.1",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "@vnodes/source": "./src/index.ts",
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "assets",
        "dist",
        "!**/*.tsbuildinfo"
    ],
    "nx": {
        "sourceRoot": "libs/nest/src",
        "targets": {
            "build": {
                "executor": "@nx/js:swc",
                "outputs": [
                    "{options.outputPath}"
                ],
                "options": {
                    "outputPath": "libs/nest/dist",
                    "main": "libs/nest/src/index.ts",
                    "tsConfig": "libs/nest/tsconfig.lib.json",
                    "skipTypeCheck": false,
                    "stripLeadingPaths": true
                }
            },
            "lint": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "npx @biomejs/biome check --write --unsafe {projectRoot}"
                }
            },
            "test": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "npx tsx --test src/**/*.{spec,test}.ts",
                    "cwd": "{projectRoot}"
                }
            },
            "doc": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "npx typedoc --tsconfig libs/nest/tsconfig.lib.json --entryPoints libs/nest/src/index.ts --out public/libs/nest",
                    "cwd": "{workspaceRoot}"
                }
            }
        }
    },
    "peerDependencies": {
        "@nestjs/common": "^11.1.13",
        "@nestjs/core": "^11.1.13",
        "@nestjs/swagger": "^11.2.6"
    },
    "dependencies": {
        "@swc/helpers": "~0.5.11",
        "@vnodes/names": "workspace:*",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "express": "^5.2.1"
    },
    "devDependencies": {
        "@nestjs/testing": "^11.1.13",
        "@types/express": "^5.0.6"
    }
}